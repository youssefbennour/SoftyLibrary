@model BookViewModel

<h2>Create book</h2>
<form class="submit-form" method="post" asp-action="Edit" asp-controller="Book">
    <div class="form-group">
        <label class="text-muted" asp-for="BookName"></label>
        <input type="text" class="form-controller" asp-for="BookName" maxlength="250"/>
        <span asp-validation-for="BookName" style="color:red"></span>
    </div>
    <div class="form-group">
        <label class="text-muted" asp-for="Description"></label>
        <textarea type="text" class="form-controller" asp-for="Description"></textarea>
        <span asp-validation-for="Description" style="color:red"></span>
    </div>
    <div class="form-group"> 
        <label class="text-muted" asp-for="AuthorName"></label>
        <input type="text" class="form-controller" asp-for="AuthorName" />
        <span asp-validation-for="AuthorName" style="color:red"></span>
    </div>  
    <div class="form-group">
        <label class="text-muted" asp-for="CategoryName"></label>
        <select asp-for="CategoryName" asp-items="Html.GetEnumSelectList<Category>()">
            <option>Select a genre</option>
        </select>
        <span asp-validation-for="CategoryName" style="color:red"></span>
    </div>
    <div class="btn-group">
        <button type="submit" class="submit-btn">Update</button>
        <a asp-controller="Book"  asp-action="Cancel" class="cancel-btn">Cancel</a>
    </div>
</form>