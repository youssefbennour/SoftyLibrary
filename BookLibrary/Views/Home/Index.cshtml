@model IEnumerable<Book>
@{
    ViewData["Title"] = "Home Page";
}

<div class="book-container">
    @foreach (var book in Model)
    {
        <div class="movie">
            <div class="image-content">
                <img src="~/atomic_habits.jpg" alt="temporary-photo"/>
            </div>     
            <div class="text-content">
                <div class="book-title">
                    <h1>@book.Name</h1>
                </div>
                <div class="book-details">
                    <p>@book.Description</p>
                    <p>@book.Author?.Name</p>
                    <p>@book.category?.ToString()</p>
                </div>
                <div class="btn-group">
                    <a asp-action="Edit" asp-controller="Book" asp-route-id="@book.Id" class="edit-btn">Edit</a>
                    <a asp-action="Delete" asp-controller="Book" asp-route-id="@book.Id" class="delete-btn">Delete</a>
                </div>
            </div>
        </div>
    }
</div>